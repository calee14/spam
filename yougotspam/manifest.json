{
  "manifest_version": 2,
  "name": "You Got Spam",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": ["*://*.stackoverflow.com/*"],
      "js": ["jquery-3.2.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
  	"default_icon": "icon.png"
	},
  "permissions": ["tabs", "activeTab"],
	"background": {
  	"scripts": ["background.js"]
	}
}